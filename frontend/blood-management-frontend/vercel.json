{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://blood-management-api.onrender.com/api",
    "VITE_APP_NAME": "Blood Management System",
    "VITE_APP_VERSION": "1.0.0"
  }
}